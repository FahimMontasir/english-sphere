    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.10.1",
    "gender-detection": "^0.1.0",
    "helmet": "^7.0.0",
    "iso-country-currency": "^0.7.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
