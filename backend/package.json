{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "docker:up": "docker compose -f docker-compose.dev.yaml up -d",
    "docker:start": "docker compose -f docker-compose.dev.yml start",
    "docker:stop": "docker compose -f docker-compose.dev.yml stop",
    "build": "yarn tsoa spec && yarn tsc",
    "start": "node dist/server.js",
    "dev": "yarn tsoa spec && cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format:fix": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "format:check": "prettier --ignore-path .prettierignore --check \"**/*.+(js|ts|json)\"",
    "formatAndLint:check": "yarn format:check && yarn lint:check",
    "test": "cross-env NODE_ENV=test jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
